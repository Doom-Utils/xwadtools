INC = ../include
LIB = ../lib

CCFLAGS = $(CFLAGS) -I$(INC)
LFLAGS = -s -L$(LIB)

wadldc: wadldc.o
	$(CC) $(LFLAGS) -o $@ wadldc.o -lwad

wadldc.o: wadldc.c $(INC)/sysdep.h $(INC)/wad.h $(INC)/lump_dir.h \
	  $(INC)/wadfile.h $(LIB)/libwad.a

$(LIB)/libwad.a:
	cd ../lib; make

clean:
	rm -f *.o wadldc wadldc.exe

allclean:
	make clean; cd ../lib; make clean

.c.o:
	$(CC) $(CCFLAGS) -c $< -o $@
